<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaofeng.startbaby.ui.Register2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register2_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/defaultXMSize"
        android:background="@color/colorPrimaryO">

        <ImageView
            android:id="@+id/register_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaultSize"
            android:src="@drawable/login_go_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultSize"
            android:text="@string/number_register"
            android:textSize="@dimen/defaultXXXTextSize"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/register2_text"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:text="我们已发送验证码"/>-->

        <!--<TextView-->
        <!--android:id="@+id/register2_number"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:text="18513410034"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/defaultXLTextSize"/>-->
        <EditText
            android:id="@+id/register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/defaultXXSize"
            android:layout_marginLeft="@dimen/defaultXXXSize"
            android:layout_marginRight="@dimen/defaultXXXSize"
            android:background="@drawable/register_bg"
            android:hint="请填写手机号"
            android:inputType="text"
            android:padding="@dimen/defaultXSize"
            android:textSize="@dimen/defaultXTextSize"/>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/defaultXXSize"
            android:layout_marginLeft="@dimen/defaultXXXSize"
            android:layout_marginRight="@dimen/defaultXXXSize"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:background="@drawable/register_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="验证码"
                    android:textSize="@dimen/defaultXTextSize"/>

                <EditText
                    android:id="@+id/register_identify_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.08"
                    android:background="@null"
                    android:hint="请填写验证码"
                    android:inputType="text"
                    android:padding="@dimen/defaultXSize"
                    android:textSize="@dimen/defaultXTextSize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/defaultXXSize"
                    android:text="获取验证码"
                    android:textSize="@dimen/defaultXTextSize"/>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultXXXSize"
            android:layout_marginRight="@dimen/defaultXXXSize"
            android:background="@color/colorPrimary"
            android:text="完成"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
